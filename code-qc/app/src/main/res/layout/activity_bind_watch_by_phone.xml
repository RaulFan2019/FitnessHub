<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="779dp"
        android:layout_height="463dp"
        android:layout_marginTop="129dp"
        android:background="@drawable/bg_shape_common_30_radius"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:text="@string/title_bind_watch_by_phone"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <View
            android:layout_width="640dp"
            android:layout_height="2px"
            android:layout_marginTop="20dp"
            android:background="@drawable/line_main_tips" />

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="278dp"
            android:layout_marginTop="44dp"
            android:orientation="vertical"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:layout_marginStart="1076dp"
        android:background="@drawable/bg_tips_back"/>

</LinearLayout>