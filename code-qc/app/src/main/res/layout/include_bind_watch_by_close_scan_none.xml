<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_title_scan_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="49dp"
        android:text="@string/title_bind_watch_by_close_scan_none"/>

    <View
        android:layout_width="640dp"
        android:layout_height="2px"
        android:layout_marginTop="20dp"
        android:background="@drawable/line_main_tips" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal">

        <View
            android:layout_width="211dp"
            android:layout_height="220dp"
            android:background="@drawable/ic_bind_hub"/>

        <View
            android:layout_width="133dp"
            android:layout_height="177dp"
            android:layout_marginLeft="174dp"
            android:background="@drawable/ic_bind_watch"/>
    </LinearLayout>

</LinearLayout>