<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="63dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_title_cal"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="292dp"
        android:text="@string/name_cal"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_title_point"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="@string/name_point"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_title_avg_hr"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="@string/name_avg_hr"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_title_max_hr"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/name_max_hr"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_title_effort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_power"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

</LinearLayout>