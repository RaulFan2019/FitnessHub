<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_list_title_sort"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:text="@string/name_report_summary_list_title_sort"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_list_title_duration"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:text="@string/name_report_summary_list_title_duration"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_list_title_cal"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="@string/name_report_summary_list_title_cal"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_list_title_point"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:text="@string/name_report_summary_list_title_point"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_list_title_avg_hr"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="@string/name_report_summary_list_title_avg_hr"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_list_title_max_hr"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:text="@string/name_report_summary_list_title_max_hr"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_list_title_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_report_summary_list_title_power"
        android:textColor="@android:color/white"
        android:textSize="14dp" />
</LinearLayout>
