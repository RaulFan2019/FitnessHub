<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="227dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sport_group_right_bar"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- 二维码 -->
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@android:color/white" />
    </LinearLayout>

    <!-- 当前锻炼人数 -->
    <TextView
        android:id="@+id/tv_curr_mover_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="38dp" />

    <!-- 团课锻炼数据 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:orientation="vertical"
        android:paddingLeft="82dp">

        <TextView
            android:id="@+id/tv_group_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- -"
            android:textColor="@android:color/white"
            android:textSize="34dp" />

        <TextView
            android:id="@+id/tv_group_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="- -"
            android:textColor="@android:color/white"
            android:textSize="34dp" />

        <TextView
            android:id="@+id/tv_group_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="- -"
            android:textColor="@android:color/white"
            android:textSize="34dp" />
    </LinearLayout>

    <View
        android:id="@+id/v_mode"
        android:layout_width="200dp"
        android:layout_height="81dp"
        android:layout_marginTop="18dp" />
</LinearLayout>