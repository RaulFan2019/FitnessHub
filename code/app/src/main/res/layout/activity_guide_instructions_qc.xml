<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GuideBaseLayout">

    <cn.fizzo.hub.fitness.ui.widget.fizzo.NormalTextView
        android:id="@+id/tv_title"
        style="@style/GuideTitle"/>

    <View
        android:id="@+id/v_guide"
        android:layout_width="779dp"
        android:layout_height="463dp"
        android:layout_marginTop="22dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:orientation="horizontal">

        <cn.fizzo.hub.fitness.ui.widget.fizzo.NormalButton
            android:id="@+id/btn_pre"
            style="@style/BtnAccent"
            android:layout_marginRight="18dp"
            android:text="@string/guide_instruction_last_step"/>

        <cn.fizzo.hub.fitness.ui.widget.fizzo.NormalButton
            android:id="@+id/btn_next"
            style="@style/BtnAccent"
            android:text="@string/guide_instruction_next_step"/>

    </LinearLayout>


</LinearLayout>