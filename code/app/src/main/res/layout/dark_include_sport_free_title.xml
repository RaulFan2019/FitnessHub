<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_store"
        android:layout_width="78dp"
        android:layout_height="78dp" />


    <LinearLayout
        style="@style/DarkSportFreeTitleTotalLy"
        android:layout_marginLeft="28dp">

        <View
            style="@style/DarkSportFreeTitleTotalIcon"
            android:background="@drawable/dark_ic_movers"/>

        <TextView
            android:id="@+id/tv_total_movers"
            style="@style/DarkSportFreeTitleTotalValue"
            android:text="0"/>
        <TextView
            style="@style/DarkSportFreeTitleTotalUnit"
            android:text="@string/unit_persons"/>

    </LinearLayout>

    <View
        android:id="@+id/v_graphic_percent"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_marginLeft="41.8dp"
        android:background="@drawable/dark_ic_sport_graphic_percent"
        android:visibility="gone"/>

    <View
        android:id="@+id/v_graphic_target"
        android:layout_width="128dp"
        android:layout_height="68dp"
        android:layout_marginLeft="41.8dp"
        android:background="@drawable/dark_ic_sport_graphic_target"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_tv_main"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/dark_tv_secondly"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:orientation="vertical"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@android:color/white"/>
    </LinearLayout>

</LinearLayout>