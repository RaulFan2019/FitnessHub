<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="143.5dp"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- 门店图标 -->
    <ImageView
        android:id="@+id/iv_store"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"/>

    <!-- 二维码 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:background="#242133"
        android:gravity="center_vertical|center_horizontal">

        <!-- 二维码 -->
        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@android:color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sport_scan_to_bind"
            android:textColor="@color/dark_tv_secondly"
            android:layout_marginTop="14dp"
            android:textSize="16dp"/>

    </LinearLayout>
    <!-- 人数 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:background="#162043"
        android:gravity="center_vertical">

        <View
            android:layout_width="32.5dp"
            android:layout_height="33.8dp"
            android:layout_marginLeft="21dp"
            android:background="@drawable/dark_ic_movers"/>

        <TextView
            android:id="@+id/tv_mover_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="21dp"
            android:layout_marginLeft="10dp"
            android:text="@string/unit_persons"/>
    </LinearLayout>


    <!-- 心率模式 百分比 -->
    <View
        android:id="@+id/v_graphic_percent"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="151dp"
        android:background="@drawable/dark_ic_sport_bar_graphic_percent"/>

    <View
        android:id="@+id/v_graphic_target"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/dark_ic_sport_bar_graphic_target"
        android:visibility="gone"/>

    <!-- 时间 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:background="#162043"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_tv_secondly"
            android:textSize="13dp"
            android:text="@string/sport_group_training_time"/>
    </LinearLayout>


</LinearLayout>