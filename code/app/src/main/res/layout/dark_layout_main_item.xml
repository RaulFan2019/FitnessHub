<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_base"
    android:layout_width="248dp"
    android:layout_height="401dp"
    android:orientation="vertical"
    android:focusable="true"
    android:clipChildren="false"
    android:clipToPadding="false">

    <View
        android:id="@+id/img_bg"
        style="@style/DarkMainMenuItemImg"/>

    <LinearLayout
        style="@style/DarkMainMenuItemInfoLayout">

        <TextView
            android:id="@+id/tv_title"
            style="@style/DarkMainMenuItemInfoTitle"/>

        <View
            android:id="@+id/v_divider"
            style="@style/DarkMainMenuItemInfoDivider"/>

        <TextView
            android:id="@+id/tv_tip"
            style="@style/DarkMainMenuItemInfoTip"/>
    </LinearLayout>

    <View
        android:id="@+id/v_frame"
        style="@style/DarkMainMenuItemFrame"
        android:layout_width="202dp"
        android:layout_height="300dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dark_frame_main_menu_item"/>

</FrameLayout>