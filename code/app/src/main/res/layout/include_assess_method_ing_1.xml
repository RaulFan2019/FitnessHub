<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_working"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="892dp"
        android:layout_height="502dp"
        android:layout_marginLeft="35dp" />

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/video_view_tx"
        android:layout_width="892dp"
        android:layout_height="502dp"
        android:layout_marginLeft="35dp"
        android:visibility="gone" />

    <!-- 节拍器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="33.8dp"
                android:layout_height="41.8dp"
                android:background="@drawable/ic_assess_method_ing_time" />

            <cn.fizzo.hub.fitness.ui.widget.fizzo.NumTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:textColor="@android:color/white"
                android:textSize="39dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_marginTop="66dp"
            android:background="@drawable/bg_assess_method_rap"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <cn.fizzo.hub.fitness.ui.widget.fizzo.NumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textColor="@color/accent"
                android:textSize="40dp" />

            <cn.fizzo.hub.fitness.ui.widget.fizzo.NormalTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assess_method_rap_unit"
                android:textColor="@color/primary"
                android:textSize="13dp" />
        </LinearLayout>

        <View
            android:id="@+id/v_rap"
            android:layout_width="158dp"
            android:layout_height="53.8dp"
            android:layout_marginTop="66dp"
            android:background="@drawable/ic_assess_method_rap_default" />
    </LinearLayout>
</LinearLayout>
