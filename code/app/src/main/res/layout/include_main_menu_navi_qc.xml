<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="123dp"
    android:orientation="horizontal"
    android:paddingLeft="41dp"
    android:paddingRight="41dp">

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_marginTop="37dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <cn.fizzo.hub.fitness.ui.widget.circular.CircularImage
            android:id="@+id/iv_store"
            android:layout_width="85dp"
            android:layout_height="85dp" />

        <View
            style="@style/DividerV"
            android:layout_height="64dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp" />

        <LinearLayout
            android:layout_width="147dp"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <cn.fizzo.hub.fitness.ui.widget.fizzo.NumTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_secondly"
                android:textSize="34dp" />

            <cn.fizzo.hub.fitness.ui.widget.fizzo.NumTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/tv_secondly"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>