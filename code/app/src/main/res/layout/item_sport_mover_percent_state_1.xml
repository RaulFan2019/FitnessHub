<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="759dp"
    android:layout_height="565dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="1dp"
        android:background="@drawable/bg_item_sport_mover_percent_0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mover_name"
            style="@style/SportItemName"
            android:layout_height="61dp"
            android:layout_marginTop="17dp"
            android:textSize="42dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/SportHrLine">

                <TextView
                    android:id="@+id/tv_percent"
                    style="@style/SportHrTv"
                    android:paddingLeft="55dp"
                    android:textSize="320dp" />

                <TextView
                    style="@style/SportHrPercentTv"
                    android:textSize="60dp" />
            </LinearLayout>

            <!-- 个人信息 -->
            <RelativeLayout
                android:layout_width="264dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fl_avatar"
                    android:layout_width="178dp"
                    android:layout_height="178dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp">

                    <cn.fizzo.hub.fitness.ui.widget.circular.CircularImage
                        android:id="@+id/iv_avatar"
                        style="@style/SportAvatar" />

                    <View
                        android:id="@+id/v_mask"
                        style="@style/SportAvatarMask"/>

                    <TextView
                        android:id="@+id/tv_ant"
                        style="@style/SportAnt"
                        android:layout_height="50dp"
                        android:textSize="26dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_cal"
                    style="@style/SportItemData"
                    android:layout_marginLeft="108dp"
                    android:layout_marginTop="246dp"
                    android:textSize="46dp" />

                <TextView
                    android:id="@+id/tv_point"
                    style="@style/SportItemData"
                    android:layout_marginLeft="108dp"
                    android:layout_marginTop="315dp"
                    android:textSize="46dp" />

                <TextView
                    android:id="@+id/tv_hr"
                    style="@style/SportItemData"
                    android:layout_marginLeft="108dp"
                    android:layout_marginTop="380dp"
                    android:textSize="46dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
